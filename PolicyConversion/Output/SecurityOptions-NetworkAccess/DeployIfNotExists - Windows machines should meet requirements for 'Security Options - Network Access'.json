                    "type": "string"
                  },
                  "NetworkAccessSharesThatCanBeAccessedAnonymously": {
                    "type": "string"
                  },
      "assignmentType": {
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "condition": "[equals(toLower(field('type')), toLower('microsoft.hybridcompute/machines'))]",
                    "apiVersion": "2024-04-05",
                    "type": "Microsoft.HybridCompute/machines/providers/guestConfigurationAssignments",
                    "name": "[concat(field('name'), '/Microsoft.GuestConfiguration/', 'AzureBaseline_SecurityOptions_NetworkAccess')]",
                    "location": "[field('location')]",
                    "properties": {
                      "guestConfiguration": {
                        "name": "['AzureBaseline_SecurityOptions_NetworkAccess']",
                        "version": "1.0.0.0",
                        "assignmentType": "[parameters('assignmentType')]",
                        "configurationParameter": [
                          {
